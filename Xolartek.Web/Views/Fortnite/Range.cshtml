@using Xolartek.Web.Models;
@model RangedWeapon

<div class="row">
    <div class="col-md-8">
        <h3>New Ranged Weapon Form</h3><hr />
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("CreateRange", "Fortnite", FormMethod.Post, new { id = "FormCreate", role = "form", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.Level, new { @class = "label" })
                    @Html.TextBoxFor(model => model.Level, new { @class = "form-control", data_role = "numerictextbox" })
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.Stars, new { @class = "label" })
                    @Html.TextBoxFor(model => model.Stars, new { @class = "form-control" })
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(model => model.Damage, new { @class = "label" })
                    @Html.TextBoxFor(model => model.Damage, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.LabelFor(model => model.FireRate, new { @class = "label" })
                    @Html.TextBoxFor(model => model.FireRate, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.CritChance, new { @class = "label" })
                    @Html.TextBoxFor(model => model.CritChance, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.CritDamage, new { @class = "label" })
                    @Html.TextBoxFor(model => model.CritDamage, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.LabelFor(model => model.MagazineSize, new { @class = "label" })
                    @Html.TextBoxFor(model => model.MagazineSize, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.Range, new { @class = "label" })
                    @Html.TextBoxFor(model => model.Range, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.ReloadTime, new { @class = "label" })
                    @Html.TextBoxFor(model => model.ReloadTime, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.LabelFor(model => model.Durability, new { @class = "label" })
                    @Html.TextBoxFor(model => model.Durability, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.DurabilityPerUse, new { @class = "label" })
                    @Html.TextBoxFor(model => model.DurabilityPerUse, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.AmmoCost, new { @class = "label" })
                    @Html.TextBoxFor(model => model.AmmoCost, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.LabelFor(model => model.Impact, new { @class = "label" })
                    @Html.TextBoxFor(model => model.Impact, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.WeaponEdition, new { @class = "label" })
                    @Html.DropDownListFor(model => model.WeaponEdition, (IEnumerable
        <SelectListItem>)ViewBag.WeaponEdition, "- Select Edition -", new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.WeaponType, new { @class = "label" })
                    @Html.DropDownListFor(model => model.WeaponType, (IEnumerable
        <SelectListItem>)ViewBag.WeaponTypes, "- Select Type -", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.LabelFor(model => model.Picture, new { @class = "label" })
                    @Html.TextBoxFor(model => model.Picture, new { @class = "form-control" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.Rarity, new { @class = "label" })
                    @Html.DropDownListFor(model => model.Rarity, (IEnumerable  
        <SelectListItem>)ViewBag.Rarities, "- Select Rarity -", new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h5>Material Cost</h5>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h5>Traits</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12"><hr /></div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>
</div>