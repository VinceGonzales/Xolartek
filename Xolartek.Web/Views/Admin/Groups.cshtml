@using Xolartek.Web.Models;
@model IList<UserRole>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            &nbsp;
        </div>
        <div class="col-md-4">
            <h3>Manage roles</h3>
            <table class="table table-hover table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserRole role in Model)
                    {
                        <tr>
                            <th scope="row">-</th>
                            <td>@role.RoleName</td>
                            <td>@role.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

