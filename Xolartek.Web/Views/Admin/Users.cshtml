@using Xolartek.Web.Models;
@model IList<UserAccount>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            &nbsp;
        </div>
        <div class="col-md-4">
            <h3>Manage accounts</h3>
            <table class="table table-hover table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserAccount user in Model)
                    {
                    <tr>
                        <th scope="row">-</th>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Group</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
